<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.RewardActivityEntity" table="reward_activity" schema="ibm_icbc">
        <id name="rewardActivityId" column="reward_activity_id">
            <generator class="uuid"/>
        </id>
        <property name="rewardActivityName" column="reward_activity_name"/>
        <property name="rewardActivityCostValue" column="reward_activity_cost_value"/>
        <property name="rewardActivityGetValue" column="reward_activity_get_value"/>
        <property name="rewardActivityCreateTime" column="reward_activity_create_time"/>
        <property name="rewardActivityIsValid" column="reward_activity_is_valid"/>
    </class>
</hibernate-mapping>